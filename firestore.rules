rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && getUserRole() == 'admin';
    }
    
    // Helper function to check if user is student
    function isStudent() {
      return request.auth != null && getUserRole() == 'student';
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      // Only admins can read all feedback
      allow read: if isAdmin();
      
      // Only students can create feedback
      allow create: if isStudent();
      
      // Students can read their own feedback
      allow read: if isStudent() && request.auth.uid == resource.data.uid;
      
      // No one can update or delete feedback (immutable)
      allow update, delete: if false;
    }
    
    // Analytics data (optional - for future use)
    match /analytics/{document=**} {
      // Only admins can read analytics
      allow read: if isAdmin();
      
      // System can write (via Cloud Functions)
      allow write: if false;
    }
  }
}
